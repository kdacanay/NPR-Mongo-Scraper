<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Mongo Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home
                <span class="sr-only">(current)</span>
            </a>
            <a class="nav-item nav-link" href="/saved">Saved Articles</a>
            <a href="/scrape" class="btn btn-danger active" role="button" aria-pressed="true"
                style="font-family: 'Trebuchet MS'">scrape npr news</a>
        </div>
    </div>
</nav>
<br>
<br>
<div class=" container-fluid">
    <div class="text-center">
        <div class=" overlay">
            <div class="caption">
                <h1 class="display-1 text-black"
                    style="font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; ">
                    <img src="../assets/images/npr logo.png" width="200" height="75">
                    scraper</h1>
                <br>
                <br>
            </div>
        </div>
        <div class=row>
            <div class="col-12">
                {{#each articles}}
                {{#if saved}}
                <div class="card w-90" id="savedArticles" ">
                    <div class=" card-header text-white"
                    style=" background-color: #1d7cbf; font-family: 'Trebuchet MS'">
                    <a href={{this.link}} target="_blank" class="text-white">
                        <h5>{{this.title}}</h5>
                    </a>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        {{this.teaser}}
                    </p>
                    <button data="{{this._id}}" class="btn btn-info note-btn">Article Notes</button>
                    <button data="{{this._id}}" data-save="{{this.saved}}" class=" btn btn-danger delete-btn">Delete
                        From
                        Saved</button>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
<div class="modal fade" id="note-modal" tabindex="-1" role="dialog" aria-labelledby="successMessage" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notes for Article <span id="article-id"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <ul class="list-group list-group-flush articles-available">
                    </ul>
                </div>
                <br />
                <div class="form-group">
                    <label for="note-input" class="sr-only">Enter Note Here</label>
                    <textarea class="form-control" id="note-input" rows="3" placeholder="New Note"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="save-note">Save Note</button>
            </div>
        </div>
    </div>
</div>